[% INCLUDE includes/header.ttml %]
[%
IF search_id;
  breadcrumbs.push('<a href="/profile/search.pl">Search Profiles</a>');
  breadcrumbs.push("<a href=\"/profile/search.pl?mode=results&search_id=$search_id&rejoin_search=1\">Results</a>");
END;
IF own_profile;
  breadcrumbs.push('My Profile');
ELSE;
  breadcrumbs.push(profile_name);
END;
%]

[% IF NOT profile_name %]
  <p>Please specify a profile to view!</p>
  [% INCLUDE includes/footer.ttml %][% RETURN %]
[% ELSIF NOT profile_id %]
  <p>Sorry, but no profile with nickname <span style="color:red">[% profile_name %]</span> was found.</p>
  <p><a href="/profile/search.pl">Click here</a> to search for profiles.. Maybe you'll find it! ;)</p>
  [% INCLUDE includes/footer.ttml %][% RETURN %]
[% ELSIF deleted_date %]
  <p>Sorry, but <span style="color:red">[% profile_name %]</span> deleted their profile on [% deleted_date %].</p>
  <p><a href="/profile/search.pl">Click here</a> to search for profiles.. Maybe you'll find their new profile! ;)</p>
  [% INCLUDE includes/footer.ttml %][% RETURN %]
[% END %]



[% IF own_profile %]
  <ul class="opt" style="float:right">
    <li class="opt"><img
        src="/images/icons/profile/edit_profile.gif"
        alt="Edit Profile">
      <a href="/profile/account.pl">Edit Profile</a></li>
    <li class="opt2" style="font-weight:bold"><img
        src="/images/icons/friendsandblocks/manage.gif"
        alt="Manage Friends/Blocks">
      <a href="/profile/friendsandblocks.pl">Manage Friends/Blocks</a></li>
  </ul>
[% ELSIF core.user_id %]
  <ul class="opt" style="float:right">
    [% UNLESS block %]
    <li class="opt"><a [% IF fave %]
      href="/profile/friendsandblocks.pl?mode=delfave&fave_profile_name=[% profile_name %]&from_profile=[% profile_name %][% IF search_id %]&search_id=[% search_id %][% END %]"
      title="Remove Favourite"><img src="/images/icons/friendsandblocks/delete_fave.gif" alt="Remove Favourite"></a></li>
                       [% ELSE %]
      href="/profile/friendsandblocks.pl?mode=addfave&fave_profile_name=[% profile_name %]&from_profile=[% profile_name %][% IF search_id %]&search_id=[% search_id %][% END %]"
      title="Add Favourite"><img src="/images/icons/friendsandblocks/add_fave.gif" alt="Add Favourite"></a></li>
                       [% END %]
    <li class="opt"><a [% IF friend %]
      href="/profile/friendsandblocks.pl?mode=delfriend&friend_profile_name=[% profile_name %]&from_profile=[% profile_name %][% IF search_id %]&search_id=[% search_id %][% END %]"
      title="Remove Friend"><img src="/images/icons/friendsandblocks/delete_friend.gif" alt="Remove Friend"></a></li>
                       [% ELSE %]
      href="/profile/friendsandblocks.pl?mode=addfriend&friend_profile_name=[% profile_name %]&from_profile=[% profile_name %][% IF search_id %]&search_id=[% search_id %][% END %]"
      title="Add Friend"><img src="/images/icons/friendsandblocks/add_friend.gif" alt="Add Friend"></a></li>
                       [% END %]
    <li class="opt"><a
      href="/profile/message.pl?mode=compose&to=[% profile_name %]&from_profile=[% profile_name %][% IF search_id %]&search_id=[% search_id %][% END %]"
      title="Send Message"><img src="/images/icons/message/compose_message.gif" alt="Send Message"></a></li>
    [% END %]
    <li class="opt2"><a [% IF block %]
      href="/profile/friendsandblocks.pl?mode=unblock&block_profile_name=[% profile_name %]&from_profile=[% profile_name %][% IF search_id %]&search_id=[% search_id %][% END %]"
      title="Unblock"><img src="/images/icons/friendsandblocks/unblock.gif" alt="Unblock"></a></li>
                       [% ELSE %]
      href="/profile/friendsandblocks.pl?mode=block&block_profile_name=[% profile_name %]&from_profile=[% profile_name %][% IF search_id %]&search_id=[% search_id %][% END %]"
      title="Block"><img src="/images/icons/friendsandblocks/block.gif" alt="Block"></a></li>
                       [% END %]
  </ul>
[% END %]


<div id="mainphoto"
     class="thumbnail-info-container"
     style="float:left; clear:left;">
  <div class="thumbnail-container">
    [% IF main_photo.photo_id %]
[% caption = main_photo.caption FILTER html_entity %]
[% IF !main_photo.checked_date; # Quick and Nasty Kludge!
     main_photo.tnnc_width = 100;
     main_photo.tnnc_height = 100;
   END %]
    <a href="/profile/photo-album.pl?profile_id=[% profile_id %][% IF search_id %]&search_id=[% search_id %][% END %]"
       class="thumbnail-shadow"
       title="[% caption %] :: Photo Album:[% photo_count %] photos">[% END %]
      <div class="thumbnail-shadow"
           style="background-image:url('/images/thumbnail-shadow/[% main_photo.tnnc_width %]/pink_rectangle_blurred_RGBA_[% main_photo.tnnc_width %]x[% main_photo.tnnc_height %].png');
                  width:[% main_photo.tnnc_width %]px;
                  height:[% main_photo.tnnc_height %]px;
                  position:absolute;
                  top: 50%; margin-top:-[% (main_photo.tnnc_height+15) / 2 %]px;
                  left: 50%; margin-left:-[% (main_photo.tnnc_width+15) / 2 %]px;">
        <img src="[% main_photo.thumbnail %]&nc=1"
             style="width:[% main_photo.tnnc_width %]px;
                    height:[% main_photo.tnnc_height %]px;"
             alt="[% caption %]" />
      </div>
    [% IF main_photo.photo_id %]
    </a>[% END %]
  </div>
  <!--<p style="font-size:0.9em;">[% caption %]</p>-->
</div>

<h3 style="clear:left;padding-top:32px">About Me</h3>
<table style="border:none; padding-left:10px; width:100%">
  <tr>
    <td class="padb">Age / Sex / Location</td>
    <td class="pad" colspan="3">[% IF age %][% age %][% ELSE %]Unspecified[% END %]
                              / [% IF gender %][% gender FILTER ucfirst %][% ELSE %]Unspecified[% END %]
                              / [% IF nationality %]
                                  [% IF cityname %][% cityname FILTER ucfirst %], [% END %]
                                  [% nationality FILTER ucfirst %]
                                [% ELSE %]Unspecified
                                [% END %]
    </td>
  </tr>
  <tr>
    <td class="padb" width="20%">[% UNLESS hide_empty_info && !sexuality %]Sexuality[% END %]</td>
    <td class="pad">[% UNLESS hide_empty_info && !sexuality %]
                      [% IF sexuality %][% sexuality FILTER ucfirst %][% ELSE %]Rather not say[% END %]
                    [% END %]
    </td>
    <td class="pad2b">[% UNLESS hide_empty_info && !starsign %]Star sign[% END %]</td>
    <td class="pad">[% UNLESS hide_empty_info && !starsign %]
                      [% IF starsign %][% starsign FILTER ucfirst %][% ELSE %]Rather not say[% END %]
                    [% END %]
    </td>
  </tr>
 <tr>
    <td class="padb">[% UNLESS hide_empty_info && !relationship_status %]Relationship status[% END %]</td>
    <td class="pad">[% UNLESS hide_empty_info && !relationship_status %]
                      [% IF relationship_status %][% relationship_status FILTER ucfirst %]
                      [% ELSE %]Rather not say
                      [% END %]
                    [% END %]
   </td>
    <td class="pad2b">[% UNLESS hide_empty_info && !profession %]Profession[% END %]</td>
    <td class="pad">[% UNLESS hide_empty_info && !profession %]
                      [% IF profession %][% profession FILTER ucfirst FILTER html_entity %]
                      [% ELSE %]Rather not say
                      [% END %]
                    [% END %]
    </td>
  </tr>
  <tr>
    <td class="padb">[% UNLESS hide_empty_info && !website %]Personal website[% END %]</td>
    <td class="pad">[% UNLESS hide_empty_info && !website %]
                      [% IF website %]<a href="http://[% website FILTER uri FILTER html %]" target="_blank">[% website FILTER html %]</a>
                      [% ELSE %]Rather not say
                      [% END %]
                    [% END %]
    </td>
    <td class="pad2b">[% UNLESS hide_empty_info && !smoker %]Smoker[% END %]</td>
    <td class="pad">[% UNLESS hide_empty_info && !smoker %]
                      [% IF smoker %][% smoker %][% ELSE %]Rather not say[% END %]
                    [% END %]
    </td>
  </tr>
  <tr>
    <td class="padb">[% UNLESS hide_empty_info && !drinker %]Drinker[% END %]</td>
    <td class="pad">[% UNLESS hide_empty_info && !drinker %]
                      [% IF drinker %][% drinker %][% ELSE %]Rather not say[% END %]
                    [% END %]
    </td>
    <td class="pad2b">[% UNLESS hide_empty_info && !drug_taker %]Drug user[% END %]</td>
    <td class="pad">[% UNLESS hide_empty_info && !drug_taker %]
                      [% IF drug_taker %][% drug_taker %][% ELSE %]Rather not say[% END %]
                    [% END %]
    </td>
  </tr>
</table>




[% UNLESS hide_empty_info && !perfect_partner %]
  <p class="title">Perfect partner</p>
  <p class="data">[% perfect_partner FILTER html_entity FILTER html_line_break %]</p>
[% END %]
[% UNLESS hide_empty_info && !interests %]
